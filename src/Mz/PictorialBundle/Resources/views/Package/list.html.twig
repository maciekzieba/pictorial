{% extends "MzPictorialBundle::base.html.twig" %}

{% block body_content %}

    <div class="row">
        <div class="col-md-4">
            <h1 class="page-header"><i class="fa fa-suitcase fa-fw"></i>Pakiety</h1>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <p>
                <a href="{{ path('package_add') }}" class="btn btn-success">Dodaj</a>
            </p>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            {{ render_listing(listing) }}
        </div>
    </div>
{% endblock body_content %}

{% block _column_validityDate %}
    <td>{{ value|date("m/Y") }}</td>
{% endblock %}

{% block _column_priceNet %}
    <td>{{ value|number_format(2, ',', ' ') }} zł</td>
{% endblock %}

{% block _column_priceNetPerVisit %}
    <td>{{ value|number_format(2, ',', ' ') }} zł</td>
{% endblock %}


{% block _column_actions %}
    <td>
        <a class="btn btn-block btn-primary btn-xs" href="{{ path('package_edit', {id: row.id}) }}"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Edytuj</a>
        <a class="btn btn-block btn-danger btn-xs" href="{{ path('package_remove', {id: row.id}) }}" onclick="return confirm('Czy na pewno chcesz usunąć?');"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span> Usuń</a>
    </td>
{% endblock %}

{% block listing_filters %}
    <div id="listing_filters_{{ listing.name }}" class="">
        <div class="row">
            <div class="col-md-2">
                {{ form_row(listing.filtersFormView.id) }}
            </div>

        </div>
    </div>
{% endblock %}

