{% extends "MzPictorialBundle::base.html.twig" %}

{% block body_content %}

    <div class="row">
        <div class="col-md-4">
            <h1 class="page-header"><i class="fa fa-users fa-fw"></i>UÅ¼ytkownicy</h1>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <p>
                <a href="{{ path('user_add') }}" class="btn btn-success">Dodaj</a>
            </p>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            {{ render_listing(listing) }}
        </div>
    </div>
{% endblock body_content %}


{% block listing_filters %}
    <div id="listing_filters_{{ listing.name }}" class="">
        <div class="row">
            <div class="col-md-2">
                {{ form_row(listing.filtersFormView.name) }}
            </div>
            <div class="col-md-2">
                {{ form_row(listing.filtersFormView.email) }}
            </div>

        </div>
    </div>
{% endblock %}



{% block _column_actions %}
    <td>
        <div class="row">
            <div class="col-md-4">
                <a class="btn btn-primary btn-xs" href="{{ path('user_edit', {id: row.id}) }}">Edycja</a>
            </div>
            <div class="col-md-4">
                <a class="btn btn-danger btn-xs" href="{{ path('user_pricelist', {userId: row.id}) }}">Cennik</a>
            </div>
        </div>
    </td>
{% endblock %}