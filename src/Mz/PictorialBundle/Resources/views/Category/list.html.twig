{% extends "MzPictorialBundle::base.html.twig" %}

{% block body_content %}

    <div class="row">
        <div class="col-md-4">
            <h1 class="page-header"><i class="fa fa-tags fa-fw"></i>Kategorie</h1>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <p>
                <a href="{{ path('category_add') }}" class="btn btn-success">Dodaj</a>
            </p>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            {{ render_listing(listing) }}
        </div>
    </div>
{% endblock body_content %}



{% block _column_actions %}
    <td>
        <div class="row">
            <div class="col-md-2">
                <a class="btn btn-primary btn-xs" href="{{ path('category_edit', {id: row.id}) }}"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>
            </div>
            <div class="col-md-2">
                <a class="btn btn-danger btn-xs" href="{{ path('category_remove', {id: row.id}) }}" onclick="return confirm('Czy na pewno chcesz usunąć?');"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></a>
            </div>
        </div>
    </td>
{% endblock %}

{% block listing_filters %}
{% endblock %}

