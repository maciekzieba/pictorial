{% extends "MzPictorialBundle::base.html.twig" %}

{% block javascripts %}
    <script src="{{ asset('/bundles/mzpictorial/bootstrap-datetimepicker-master/js/bootstrap-datetimepicker.min.js') }}"></script>
    <script src="{{ asset('/bundles/mzpictorial/bootstrap-datetimepicker-master/js/locales/bootstrap-datetimepicker.pl.js') }}"></script>

{% endblock javascripts %}

{% block stylesheets %}
    <link href="{{ asset('/bundles/mzpictorial/bootstrap-datetimepicker-master/css/bootstrap-datetimepicker.min.css') }}" rel="stylesheet">
{% endblock %}


{% block body_content %}
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header"><i class="fa fa-signal fa-fw"></i>Raporty</h1>
    </div>
</div>
<ul class="nav nav-tabs nav-justified">
    <li role="presentation" class="active"><a href="{{ path('report_client') }}">Raport z wizyt</a></li>
    <li role="presentation"><a href="{{ path('report_settlement') }}">Raport rozlicze≈Ñ</a></li>
</ul>
<br>
<div class="row">
    <div class="col-md-10">
        {{ form_start(form, {action: path('report_client') , attr: {novalidate: 'novalidate'} }) }}
        {{ form_errors(form) }}
        <div class="row">
            <div class="col-md-2">
                {{ form_row(form.package) }}
            </div>
            <div class="col-md-2">
                {{ form_row(form.packageDateFrom) }}
            </div>
            <div class="col-md-2">
                {{ form_row(form.packageDateTo) }}
            </div>
        </div>
        {{ form_rest(form) }}
        <button type="submit" class="btn btn-success">Generuj raport</button>

        {{ form_end(form) }}
    </div>
</div>
    <script type="text/javascript">
        $('.hasDatePicker').datetimepicker({
            language: 'pl',
            format: "mm/yyyy",
            startView: 'year',
            minView: 'year',
            autoclose: true
        });
    </script>
{% endblock body_content %}
