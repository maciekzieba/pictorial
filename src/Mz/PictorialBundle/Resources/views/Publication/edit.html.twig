{% extends "MzPictorialBundle::base.html.twig" %}

{% block body_content %}
    <div class="row">
        <div class="col-md-8">
            <h1 class="page-header"><i class="fa fa-file-o fa-fw"></i>Edytuj publikacjÄ™ dla wizyty: {{ visit.id }}</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            {{ form_start(form, {action: path('publication_edit', {visitId: visit.id, id: publication.id}) , attr: {id: 'publicationForm', novalidate: 'novalidate'} }) }}
            {{ form_errors(form) }}
            <div class="row">
                <div class="col-md-3">
                    {{ form_row(form.type) }}
                </div>
            </div>
            <div class="row">
                <div class="col-md-3">
                    {{ form_row(form.url) }}
                </div>
            </div>
            {{ form_rest(form) }}
            <button type="submit" class="btn btn-success">Zapisz</button>
            <a href="{{ path('visit_show', {id: visit.id}) }}" class="btn btn-default">Anuluj</a>

            {{ form_end(form) }}
        </div>
    </div>
{% endblock body_content %}
